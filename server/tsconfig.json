{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@middleware/*": [
        "middlewares/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@app-types/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}